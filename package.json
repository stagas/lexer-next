{
  "name": "lexer-next",
  "author": "stagas",
  "short": "stagas/lexer-next",
  "description": "lexer for recursive descent parsers",
  "version": "3.0.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://git@github.com:stagas/lexer-next.git"
  },
  "keywords": [
    "lexer",
    "tokenizer",
    "parse",
    "parser"
  ],
  "module": "dist/esm/index.js",
  "main": "dist/cjs/index.js",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "targets": {
    "main": {
      "context": "node",
      "engines": {
        "node": ">=16.0"
      }
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run build:cjs && npm run build:esm",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:esm": "tsc -p tsconfig.esm.json && echo '{\"type\":\"module\"}' >dist/esm/package.json",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "cov": "jest --coverage",
    "cov:watch": "jest --coverage --watchAll",
    "docs": "documentation readme src --resolve=node --pe ts --re ts --re d.ts --github --section=API --markdown-toc-max-depth=4 --config=documentation.yml",
    "docs:watch": "onchange -i src -- npm run docs",
    "lint": "eslint src",
    "lint:fix": "npm run lint -- --fix",
    "fmt": "prettier --write src",
    "prepack": "npm run clean && npm run build",
    "prepare": "husky install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "dependencies": {
    "match-to-token": "^2.0.0"
  },
  "devDependencies": {
    "@stagas/documentation-fork": "^13.2.5",
    "@sucrase/jest-plugin": "^2.2.0",
    "@tsconfig/node16": "^1.0.2",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.9",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "eslint": "^8.7.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "jest": "^27.4.7",
    "onchange": "^7.1.0",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  }
}
